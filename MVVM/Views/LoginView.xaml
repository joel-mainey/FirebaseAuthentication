<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AuthenticationTesting2.MVVM.Views.LoginView"
             xmlns:viewmodel="clr-namespace:AuthenticationTesting2.MVVM.ViewModels"
             Title="Login">
    <!-- Set the BindingContext of the view to an instance of the LoginViewModel -->
    <ContentPage.BindingContext>
        <viewmodel:LoginViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="25" MaximumWidthRequest="600">
            <Label Text="Email" />
            <Entry Margin="10" Text="{Binding Users.Emails}" />

            <Label Text="Password" />
            <Entry Margin="10" IsPassword="True" Text="{Binding Users.Password}" />

            <Button Margin="10" Text="Login" Command="{Binding LoginService}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
