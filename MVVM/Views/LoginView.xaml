<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AuthenticationTesting2.MVVM.Views.LoginView"
             xmlns:loginfeature="clr-namespace:AuthenticationTesting2.MVVM.ViewModels"
             Title="Login">
    <!-- Current root page -->

    <ScrollView>
        <VerticalStackLayout Padding="25" MaximumWidthRequest="600">
            <!-- Binds loginFormView content view to the LoginView content page -->
            <loginfeature:LoginFormView Margin="20" BindingContext="{Binding LoginFormViewModel}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
