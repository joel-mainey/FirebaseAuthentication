<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AuthenticationTesting2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AuthenticationTesting2.MVVM.Views"
    xmlns:login="clr-namespace:AuthenticationTesting2.MVVM.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="AuthenticationTesting2">

    <!-- Start on home page -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!-- Start on login page -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate login:LoginView}"
        Route="Login" />


</Shell>
